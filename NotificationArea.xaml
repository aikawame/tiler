        <Separator />
        <MenuItem Header="_Edit windows" Click="Edit_Click"></MenuItem>
        <MenuItem Header="E_xit" Click="Exit_Click"></MenuItem>
      </ContextMenu>
    </tb:TaskbarIcon.ContextMenu>
  </tb:TaskbarIcon>
</ResourceDictionary>
